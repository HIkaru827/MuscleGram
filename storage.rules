rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - only owner can upload, everyone can read
    match /profile-photos/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 2 * 1024 * 1024 && // 2MB limit
        resource.contentType.matches('image/.*');
    }
    
    // Workout images - only owner can upload, everyone can read
    match /images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 5 * 1024 * 1024 && // 5MB limit for workout images
        resource.contentType.matches('image/.*');
    }
    
    // General images folder - legacy support with stricter rules
    match /images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        resource.size < 3 * 1024 * 1024 && // 3MB limit
        resource.contentType.matches('image/.*');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}