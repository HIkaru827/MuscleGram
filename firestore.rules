rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read any user profile data (for community features) but only write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own analytics data
      match /analytics/{exerciseName} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow users to read and write their own records
      match /records/{recordId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read and write workout posts
    match /workout_posts/{postId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write personal records
    match /personal_records/{recordId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write comments
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write follows
    match /follows/{followId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write likes
    match /likes/{likeId} {
      allow read, write: if request.auth != null;
    }
  }
}